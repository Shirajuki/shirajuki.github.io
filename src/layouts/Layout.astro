---
import Footer from "@/components/Footer.astro";
import Head from "@/components/Head.astro";
import Header from "@/components/Header.astro";
import { cn } from "@/lib/utils";

const { hasAccentHeader = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head>
    <slot name="head" />
  </Head>
  <body>
    <Header />
    {
      hasAccentHeader && (
        <div class="absolute top-0 left-0 h-40 w-full bg-primary-dark" />
      )
    }
    <main
      class={cn(
        "mx-auto flex grow flex-col gap-y-6 px-4 max-w-4xl min-h-[calc(100vh-160px)] pt-16",
        hasAccentHeader && "pt-32",
      )}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
