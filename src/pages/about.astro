---
import Link from "@/components/Link.astro";
import PageHead from "@/components/PageHead.astro";
import ScrollingHeading from "@/components/ScrollingHeading";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
import Layout from "@/layouts/Layout.astro";
---

<Layout hasAccentHeader>
  <PageHead
    slot="head"
    title={`${SITE_TITLE} | About me`}
    description={SITE_DESCRIPTION}
  />
  <section class="flex flex-col justify-center pb-4 text-sm">
    <h1
      class="relative inline-block mx-auto text-2xl font-bold text-center mb-8 uppercase title"
    >
      <div
        class="absolute left-1/2 -translate-x-1/2 overflow-hidden h-16 w-screen top-0 -translate-y-24"
      >
        <ScrollingHeading
          client:only
          heading="ABOUT"
          wrap={[0, -26]}
          className="text-primary-dark"
        />
      </div>
      About me
    </h1>
    <p>
      Hello! This is Shirajuki, a fullstack software developer and CTF player
      from Lillehammer, Norway.
    </p>

    <ul class="pt-2 pb-6 px-4">
      <li class="list-disc">
        X (Twitter): <Link href="#todo">@shirajukii</Link>
      </li>
      <li class="list-disc">Github: <Link href="#todo">@shirajuki</Link></li>
      <li class="list-disc">
        Developer portfolio: <Link href="#todo">jonny.ngoluong.no</Link>
      </li>
    </ul>

    <h4 class="text-lg font-bold py-2">Capture-the-flag</h4>
    <p>
      I occasionally play CTF with my friends and teammates at @Iku-toppene,
      @bootplug, @corax, @RumbleInTheJungle and @CyberSlamons. I am especially
      interested in web, misc, pwn and jails. Outside from cybersecurity and
      hacking, I usually do web and mobile development.
    </p>
  </section>
</Layout>
